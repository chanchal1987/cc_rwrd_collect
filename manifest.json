{
    "manifest_version": 2,

    "name": "Criminal Case Reward Collector",
    "description": "Collect rewards from Criminal Case Fan Page",
    "version": "0.1",

    "permissions": [
		"http://*.facebook.com/*",
		"https://*.facebook.com/*",
        "tabs",
		"history"
    ],
  
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },

    "browser_action": {
        "default_icon": "icon.png",
        "name": "Click to change the icon's color",
        "default_popup": "popup.html"
    },
    
    "background": {
        "scripts": ["js/cc_rdwrd_collect.js"]
    }
}